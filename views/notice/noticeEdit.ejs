<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>::WEBFLEX 게시판 수정::</title>
<script src="https://code.jquery.com/jquery-3.2.1.min.js" type="text/javascript"></script>
<!-- <script src="resources/js/jquery-3.5.1.min.js"></script> -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-lite.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.12/summernote-lite.js"></script>
<link rel="icon" type="image/png" sizes="16x16" href="../images/index/new logo.png">
<link rel="stylesheet" type="text/css" href="../stylesheets/board/board.css">
<style type="text/css">
#sub {
	margin-top: 10%;
}

#board_pw, #board_title{
	margin-top: 25px;
}
th{
	width: 100px;
}
.w_btn{
	float: right;
}
</style>
</head>
<body>
<header>
<% include ./header/subpage_header.ejs %>
</header>  
<div id="sub" style="width:1060px; padding:50px 0; margin:0 auto;">
<input type="hidden" value="<%= notice.nno%>" id="board_no"/>
<!-- News Start -->
<div id="sub">
	<table class="boardview_head">
		<tbody>
			<tr>
				<th>제목</th>
				<td><textarea cols="22" rows="1" maxlength="10" id="board_title"><%= notice.title%></textarea></td>
			</tr>
		</tbody>
	</table>
    <table class="boardview_text">
        <tbody>
			<tr>
				<td>
					<div style="margin-bottom:20px">
					<textarea id="summernote" class="summernote"><%- notice.cont %></textarea>
					</div>
				</td>
			</tr>
			<tr>
				<td height="20"></td>
			</tr>
		</tbody>
    </table>
	<div style="width:1060px; margin:0 auto;">
		<div class="w_btn">
			<a href="/notice/list">
				<div class="btn">목록</div>
			</a>
		</div>
		<div class="w_btn">
			<button type="reset">
				<div class="btn">취소</div>
			</button>
		</div>
		<div class="w_btn">
			<button onclick="edit_check();">
				<div class="btn">수정</div>
			</button>
		</div>
	</div>
</div>
</div>
<script>
let url;
$(document).ready(function(){
	$('#summernote').summernote({
		width:1030,
		height:500,
		callbacks: {	
			onImageUpload : function(files) {
				uploadSummernoteImageFile(files[0],this);
			}
		}
	});

	// 이미지 파일 업로드
	function uploadSummernoteImageFile(file, editor) {
		data = new FormData();
		data.append("file", file);
		$.ajax({
			data : data,
			type : "POST",
			url : "/uploadSummernoteImageFile",
			contentType : false,
			processData : false,
			success : function(data) {
				console.log(data);
            	//항상 업로드된 파일의 url이 있어야 한다.
				$(editor).summernote('insertImage', data.url);
				 url = data.url;
			}
		});
	}
});


function edit_check() {
	const nno = $.trim($('#board_no').val());
	if($.trim($('#board_title').val()) == ""){
		alert('제목을 입력하세요!');
		$('#board_title').val('').focus();
		return false;
	}
	if($.trim($('#summernote').val()) == ""){
		alert('내용을 입력하세요!');
		$('#summernote').focus();
		return false;
	}else{
		$.ajax({
			url:"/notice/edit",
			type:"post",
      		data: {
				nno : nno,
				title : $.trim($('#board_title').val()),
				cont : $.trim($('#summernote').val())
			},
      		success:function(data){
				if(data.result == "OK"){
					alert("공지사항이 수정되었습니다!.");
					location.href=`/notice/cont?nno=${nno}`;
				} else {
					alert("공지사항 수정 실패");
				}
			},
			error : function(){
				alert("오류 발생!");
			}
		});
	}
}
</script>
</body>
</html>